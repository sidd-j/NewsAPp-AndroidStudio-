<resources xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Other theme attributes -->
        <item name="android:windowBackground">@drawable/graidient2</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/Primary_1</item>
        <item name="colorPrimaryVariant">@color/Primary_1</item>
        <item name="colorOnPrimary">@color/Primary_2</item>
        <item name="colorSecondary">@color/teal_blue</item>
        <item name="colorSecondaryVariant">#FFB0E5</item>
        <item name="colorOnSecondary">#FFB1B1</item>
        <item name="android:statusBarColor">#C4FFCE</item>
        <item name="colorAccent">@color/Blue</item>
    </style>

    <attr name="themeColor" format="color"/>
    <attr name="bgcolor" format="color"/>
    <attr name="textcolor1" format="color"/>

    <!-- Light mode theme -->
    <style name="BNAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Other theme attributes for dark mode -->
        <item name="themeColor">@color/black</item>
        <item name="bgcolor">#FF9898</item>
        <item name="textcolor1">@color/black</item>
        <item name="android:background">@color/white</item>
        <!-- Other attributes for dark mode -->
    </style>




</resources>



