<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgcolor"
    android:theme="@style/BNAppTheme"
    android:layout_margin="20dp"
    >
    <ImageView
        android:id="@+id/imageFA"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <TextView
        android:id="@+id/ATV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Title"
        android:textColor="?attr/textcolor1"
        android:textSize="@dimen/font_Title"
        />
    <TextView
        android:id="@+id/ATVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="?attr/textcolor1"
        android:text="Description"
        android:textSize="@dimen/font_Desc"
        />

    <Button
        android:id="@+id/fullAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Full Articile"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#38C63B"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>